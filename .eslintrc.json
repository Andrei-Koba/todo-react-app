{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "overrides": [
    {
      "files": ["**/*.test.js"],
      "env": {
        "jest": true
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "react-hooks"],
  "rules": {
    "import/no-extraneous-dependencies": "off",
    "react/jsx-filename-extension": [
      "warn",
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "linebreak-style": "off",
    "jsx-a11y/label-has-associated-control": [
      2,
      {
        "controlComponents": ["ToDoCheckbox"],
        "depth": 3
      }
    ],
    "no-unused-vars": "off"
  }
}
